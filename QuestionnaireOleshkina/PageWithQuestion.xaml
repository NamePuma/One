<Page x:Class="QuestionnaireOleshkina.PageWithQuestion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuestionnaireOleshkina"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageWithQuestion">

    <Grid Background="Pink">
        <ListView Background="Pink"
                  Name="listViewForQuestion"
                  ItemsSource="{Binding questionForSrudent}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <WrapPanel>
                        <Label Content="{Binding Content.Text}"></Label>
                        <Label Content="{Binding Content.position}"></Label>
                            
                    </WrapPanel>
                        <StackPanel Name="stackPanelForAnswer">
                            <Button>asffsaf</Button>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
